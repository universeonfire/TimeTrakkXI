
<div class="container-fluid">
    
    <div id="card-12345">
        <div class="card">
            <div class="card-header">
                <a class="card-link" data-toggle="collapse" data-parent="#card-12345" href="#card-element-12345">New Task</a>
            </div>
            <div id="card-element-12345" class="collapse ">
                <div class="card-body">
                    <%= render "form" %>
                </div>
            </div>
        </div>
    </div>    
  

    <div class="album py-5 bg-light">
        <div class="container">
            <div id="tasks" class="row sort">
                <%= render @tasksToday %>
            </div>
        </div>
    </div> 
    <div id = "paginator">
        <%= paginate @tasksToday, remote: true %>
    </div>

</div>