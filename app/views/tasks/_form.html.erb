<%= simple_form_for @task,  wrapper: :inline_form do |f| %>
	<form class= "form" role= "form">
		
		<div class="form-group row">
			<%= f.text_area :comment, required: true, class: "form-control", id:"commentField", placeholder:"Komment", rows: 1 %>
			
		</div>
		
		<div class="form-group row">	
			<%= f.text_field :task_type, required: true, class: "form-control mb-2 mr-sm-2", id:"typeField",placeholder:"Task Type" %>
			<%= f.text_field :start_time , data: {behavior: "datepickr"}, required: true, class: "form-control mb-2 mr-sm-2", id:"dateField"%>
			<%= f.text_field :time_to_start , data: {behavior: "timepickr"}, required: true, class: "form-control mb-2 mr-sm-2", id:"startTimeField", placeholder:"Start"%>
			<%= f.text_field :time_to_end , data: {behavior: "timepickr"}, required: true, class: "form-control mb-2 mr-sm-2", id:"endTimeField", placeholder:"Finish"  %>
		</div> 

		<div class="form-group">
			<%= f.submit "Save" , class: 'btn btn-primary' %>
			<button type="button" class="btn btn-danger"><%= link_to "Kancel",tasks_path  , data: { confirm: 'Are you sure?' } %></button>
		</div>
	</form>

<% end %>